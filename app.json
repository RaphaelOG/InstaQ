{
  "expo": {
    "name": "InstaQ",
    "slug": "InstaQ",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/InstaQ.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/InstaQ.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes for attendance logging."
      },
      "bundleIdentifier": "com.anonymous.InstaQ"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/InstaQ.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-barcode-scanner"
    ],
    "jsEngine": "jsc"
  }
}
